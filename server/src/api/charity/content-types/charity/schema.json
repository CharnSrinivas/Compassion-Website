{
  "kind": "collectionType",
  "collectionName": "charities",
  "info": {
    "singularName": "charity",
    "pluralName": "charities",
    "displayName": "charity",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "fundraisers": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::fund-raise.fund-raise",
      "mappedBy": "charity"
    },
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "charity"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "documents": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "register_no": {
      "required": false,
      "type": "integer"
    },
    "address": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "recv_details": {
      "type": "string",
      "required": true
    },
    "charity_donations": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::charity-donation.charity-donation",
      "mappedBy": "charity"
    },
    "direct_funds": {
      "type": "float",
      "default": 0,
      "required": false
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "direct_funds_count": {
      "type": "integer",
      "required": true,
      "default": 0
    },
    "fund_type": {
      "type": "enumeration",
      "enum": [
        "INR",
        "USD",
        "EURO",
        "BITCOIN"
      ],
      "required": true
    }
  }
}
